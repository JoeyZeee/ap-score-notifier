{
  "manifest_version": 3,
  "name": "AP Score Notifier",
  "version": "1.0",
  "description": "Notifies you when AP scores are released.",
  "permissions": ["storage", "tabs", "notifications", "alarms", "scripting"],
  "host_permissions": ["https://apstudents.collegeboard.org/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "148": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["https://apstudents.collegeboard.org/view-scores*"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["notify.html", "dun.mp3", "icon.png"],
      "matches": ["<all_urls>"]
    }
  ]
}
